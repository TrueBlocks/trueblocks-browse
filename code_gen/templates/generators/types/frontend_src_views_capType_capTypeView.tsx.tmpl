  export const {{$routeName}}View = () => {
    const { {{$routeLower}}, {{$fetchFn}}{{$param1}} } = useAppState();
    {{$noops -}}
    {{$handleEnter -}}
    {{$handleModify}}
    {{$customCode}}

    const table = useReactTable({
      data: {{$routeLower}}?.items || [],
      columns: {{$routeName}}TableDef,
      getCoreRowModel: getCoreRowModel(),
    });

    const tabItems: ViewForm = {
      {{$routeLower}}: <TabItem tabName="{{$routeLower}}" data={ {{$routeLower}} } groups={ {{$routeName}}FormDef(table)} />,
    };

    return (
      <ViewStateProvider
        // do not remove - delint
        nItems={ {{$routeLower}}.nItems}
        fetchFn={ {{$fetchFn}}}
        onEnter={handleEnter}
        modifyFn={handleModify}{{$clickFn}}
      >
        <DebugState u={ [{{$routeLower}}.updater]} />
        <View tabItems={tabItems}{{if $wantsSearch}} searchable{{end}} />
      </ViewStateProvider>
    );
  };

